<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_bk"
            android:padding="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/titlecomehere"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="Create a new Dependency"
            android:textColor="@color/dependencycolor"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="Deploy"
            android:background="@drawable/bkforcreate"
            android:paddingHorizontal="20dp"
            android:textColor="@color/dependencycolor"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileoftheuserinsider"
            android:layout_width="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="40dp"
            android:src="@drawable/frame" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerThickness="1dp"
            app:dividerColor="@color/detail"/>

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/controlPanel"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_alignParentStart="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_bold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/boldicon"/>

        <ImageView
            android:id="@+id/action_italic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/italicicon"/>

        <ImageView
            android:id="@+id/action_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/imageicon"/>

        <ImageView
            android:id="@+id/action_gif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gificon"/>

        <ImageView
            android:id="@+id/action_character"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingStart="5dp"
            android:src="@drawable/character"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/code"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
