<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".insider.profile.fragments.ExploreFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:background="@color/background">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingVertical="4dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/homecarousel"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:autoPlay="true"
            app:showCaption="false"
            app:showNavigationButtons="false" />

    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Android"
                android:layout_marginTop="10dp"
                android:textColor="@color/tabcolor"
                android:fontFamily="@font/inter"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Most Searched android dependencies"
                android:textColor="@color/smallheading"
                android:fontFamily="@font/inter"
                android:textSize="12dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/androidproducts"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Flutter"
            android:layout_marginTop="10dp"
            android:textColor="@color/tabcolor"
            android:fontFamily="@font/inter"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Most Searched Flutter dependencies"
            android:textColor="@color/smallheading"
            android:fontFamily="@font/inter"
            android:textSize="12dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flutterproducts"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="React"
            android:layout_marginTop="10dp"
            android:textColor="@color/tabcolor"
            android:fontFamily="@font/inter"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Most Searched android dependencies"
            android:textColor="@color/smallheading"
            android:fontFamily="@font/inter"
            android:textSize="12dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reactproducts"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Python"
            android:layout_marginTop="10dp"
            android:textColor="@color/tabcolor"
            android:fontFamily="@font/inter"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Most Searched python dependencies"
            android:textColor="@color/smallheading"
            android:fontFamily="@font/inter"
            android:textSize="12dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pythonproducts"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>