<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".insider.profile.drawer.ReleaseDependencyActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleX="3"
        android:scaleY="3"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/code" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textColor="@color/tabcolor"
        android:text="Launch your Own Dependency."
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textColor="@color/smallheading"
        android:text="Create a technology and serve for your development community."
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/createbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:background="@drawable/bkforcreate"
        android:fontFamily="@font/inter"
        android:padding="18dp"
        android:textColor="@color/white"
        android:text="CREATE"
        android:textSize="14sp" />

</LinearLayout>