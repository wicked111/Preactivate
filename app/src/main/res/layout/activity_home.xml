<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".insider.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/preactivate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:dividerColor="@color/background"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circularImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/frame" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <
            android:id="@+id/searchBarNews"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_2ssp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_8ssp"
            app:mt_hint="Explore what's going on..."
            app:mt_maxSuggestionsCount="10"
            app:mt_placeholderColor="@color/black"
            app:mt_navIconEnabled="false"
            app:mt_hintColor="@color/black"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal"
            android:elevation="@dimen/_10sdp"
            app:mt_textColor="@color/black"
            app:mt_placeholder="Search News"
            app:mt_roundedSearchBarEnabled="true"
            app:mt_searchBarColor="@color/whiteopac"
            app:mt_speechMode="false" />

    </LinearLayout>


</LinearLayout>